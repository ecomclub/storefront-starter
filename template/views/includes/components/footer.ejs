<footer class="footer bg-light py-3 py-lg-4 py-xl-5">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-auto order-lg-last">
        <% if (layout.footer.contacts.title ) { %>
        <div class="footer__title h2 lead">
          <%- layout.footer.contacts.title %>
        </div>
        <% } %>
        <ul class="list-unstyled">
          <% if (layout.footer.contacts.title ) { %>
          <li>
            <i class="fab fa-whatsapp text-muted mr-1"></i>
            <a
              href="#"
              target="_blank"
              class="whatsapp-link font-weight-bold"
              data-tel="<%- layout.footer.contacts.whatsapp %>.replace(/\D/g, '')">
              <%- layout.footer.contacts.whatsapp %>
            </a>
          </li>
          <% } %>
          <% if (layout.footer.contacts.phone ) { %>
          <li>
            <i class="fas fa-phone text-muted mr-1"></i>
            <a
              href="<%- layout.footer.contacts.phone %>.replace(/\D/g, '')"
              target="_blank"
              class="font-weight-bold">
              <%- layout.footer.contacts.phone %>
            </a>
          </li>
          <% } %>
          <% if (layout.footer.contacts.email ) { %>
          <li>
            <a href="mailto:myemail@sample.com" target="_blank">
              <%- layout.footer.contacts.email %>
            </a>
          </li>
          <% } %>
        </ul>
        <p class="footer__social lead">
          <% if (layout.footer.contacts.facebook ) { %>
          <a href="#" target="_blank" style="color: #3b5998">
            <i class="fab fa-facebook"></i>
          </a>
          <% } %>
          <% if (layout.footer.contacts.youtube ) { %>
          <a href="#" target="_blank" style="color: #ff0000">
            <i class="fab fa-youtube"></i>
          </a>
          <% } %>
          <% if (layout.footer.contacts.instagram ) { %>
          <a href="#" target="_blank" style="color: #e1306c">
            <i class="fab fa-instagram"></i>
          </a>
          <% } %>
          <% if (layout.footer.contacts.twitter ) { %>
          <a href="#" target="_blank" style="color: #1da1f2">
            <i class="fab fa-twitter"></i>
          </a>
          <% } %>
          <% if (layout.footer.contacts.pinterest ) { %>
          <a href="#" target="_blank" style="color: #bd081c">
            <i class="fab fa-pinterest"></i>
          </a>
          <% } %>
        </p>
      </div>
      <div class="col-12 col-lg-5">
        <h2 class="footer__title lead text-primary">
          <%= settings.name %>
        </h2>
        <p class="text-muted">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
          eiusmod tempor incididunt ut labore et dolore magna aliqua.
        </p>
        <div class="mt-4 mb-3">
          <p class="footer__payment-methods">
            <i class="payment-icon payment-icon--visa"></i>
            <i class="payment-icon payment-icon--mastercard"></i>
            <i class="payment-icon payment-icon--amex"></i>
            <i class="payment-icon payment-icon--diners"></i>
            <i class="payment-icon payment-icon--hipercard"></i>
            <i class="payment-icon payment-icon--elo"></i>
            <i class="payment-icon payment-icon--boleto"></i>
          </p>
          <div class="footer__stamps row">
            <div class="col-auto">
              <img src="/static/ssl-safe.png" />
            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="footer__title h2 lead">
          About
        </div>
        <ul class="footer__links list-unstyled">
          <li>
            <i class="fas fa-angle-right st-text-primary-lightest"></i>
            <a href="#">
              About us
            </a>
          </li>
          <li>
            <i class="fas fa-angle-right st-text-primary-lightest"></i>
            <a href="#">
              Privacy policy
            </a>
          </li>
          <li>
            <i class="fas fa-angle-right st-text-primary-lightest"></i>
            <a href="#">
              Terms of service
            </a>
          </li>
        </ul>
      </div>
      <div class="col">
        <div class="footer__title h2 lead">
          Categories
        </div>
        <ul
          class="_ecom-el footer__links list-unstyled"
          data-type="category"
          data-list-all="true">
          <li v-for="category in body.result" v-if="!category.parent">
            <i class="fas fa-angle-right st-text-primary-lightest"></i>
            <a v-bind:href="'/' + category.slug">
              {{ category.name }}
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="footer__credits small mt-3 border-top pt-3">
      Â© Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
      eiusmod tempor incididunt ut labore et dolore magna aliqua.
      <br>
      MYSHOP LTDA | CNPJ: 00.000.000/0000-00
      - Store Address
    </div>
  </div>
</footer>

